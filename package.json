{
  "name": "github-release",
  "version": "4.2.2",
  "description": "A GitHub Action that creates a Github release with file upload and automatically generated release notes.",
  "author": "Yakuhzi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yakuhzi/action-release.git"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env ./dist/index.js",
    "start:dev": "npx @github/local-action . src/main.ts .env",
    "release": "./release.sh",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "axios": "^1.12.1",
    "firebase-admin": "^13.5.0",
    "mime": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/mime": "^3.0.4",
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
